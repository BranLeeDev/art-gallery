<style lang="scss" is:global>
	@import "../scss/functions.scss";

	:root {
		--primary-color: #ffffff;
		--secondary-color: #151515;
		--background-primary: #151515;
		--background-secondary: #d5966c;
	}

	* {
		padding: 0;
		margin: 0;
		box-sizing: border-box;
	}

	img {
		width: 100%;
		height: 100%;
	}

	a {
		text-decoration: none;
		color: inherit;
	}

	body {
		font-family: "Outfit", sans-serif;
	}

	h1,
	h2,
	h3,
	h4 {
		font-family: "Big Shoulders Display", sans-serif;
	}

	section {
		width: 91%;
	}

	ul {
		list-style: none;
	}

	.header,
	.footer {
		max-width: em(1440px);
	}

	.content-layout {
		min-width: em(320px);
		width: 100%;
		min-height: em(320px);
		height: max-content;
		display: flex;
		flex-direction: column;
		align-items: center;
	}
</style>
